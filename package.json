{
  "name": "duck_talk",
  "version": "0.1.1",
  "type": "module",
  "description": "Voice interface for Claude Code",
  "bin": {
    "duck-talk": "bin/duck-talk.js"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node dist/server/cli.js",
    "dev": "npx tsx src/server/cli.ts --no-browser & vite & wait",
    "dev:server": "tsx src/server/cli.ts --no-browser",
    "dev:client": "vite",
    "build": "tsc -p tsconfig.server.json && vite build",
    "check": "tsc -p tsconfig.server.json --noEmit && svelte-check --tsconfig ./tsconfig.app.json",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.56",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@google/genai": "^1.41.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.10.1",
    "marked": "^17.0.3",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "svelte-spa-router": "^4.0.1",
    "tsx": "^4.19.4",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}
